// Write a C++ program to calculate an average of 3 numbers.
#include<iostream>
using namespace std;
int main()
{
    float a,b,c, avg;
    cout<<endl<<"Enter the value of a:-";
    cin>>a;
    cout<<endl<<"Enter the value of b:-";
    cin>>b;
    cout<<endl<<"Enter the value of c:-";
    cin>>c;
    avg=(a+b+c)/3;
    cout<<endl<<"The average of 3 number is :-"<<avg;
    return 0;

}
